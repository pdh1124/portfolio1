<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pila.mapper.BoardMapper">

	<!-- 글 목록 -->
	<select id="getList" resultType="com.pila.domain.BoardVO">
		<![CDATA[
			select * from comm_board where bno > 0 ORDER BY BNO DESC
		]]>
	</select>
	
	<!-- 글쓰기 -->
	<insert id="insert">
		insert into comm_board(bno,title,content,writer) values (seq_board.nextval, #{title}, #{content}, #{writer})
	</insert>
	
	<!-- 글번호 받기 -->
	<insert id="insertSelectKey">
		<selectKey keyProperty="bno" order="BEFORE" resultType="long">
			select seq_board.nextval from dual
		</selectKey>
		insert into comm_board(bno,title,content,writer) values (#{bno}, #{title}, #{content}, #{writer})
	</insert>
	
	<!-- 글읽기 -->
	<select id="read" resultType="com.pila.domain.BoardVO">
		select * from comm_board where bno=#{bno}
	</select>
	
	<!-- 글 삭제 -->
	<delete id="delete">
		delete comm_board where bno=#{bno}
	</delete>

	<!-- 글 수정 -->
	<update id="update">
		update comm_board set title=#{title}, content=#{content}, writer=#{writer}, updateDate=sysdate where bno=#{bno}
	</update>
	
	
</mapper>